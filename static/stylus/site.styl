@import url('//fonts.googleapis.com/css?family=Josefin+Sans:300,400,700');

body {
  overflow-y:auto;
  overflow-x:hidden;
  background-image:url('img/background_tile.png');
  height:100%;
  width:100%;
  position:absolute;
  font-family:"Josefin Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
}
*, *:before, *:after {
  -moz-box-sizing:border-box;
  box-sizing:border-box;
}
.pointPointArrow {
  width:16px;
  height:16px;
  background:url('img/arrow.png') no-repeat;
  position:absolute;
  display:none;
  z-index:100000;
  top:0;
  left:0;
}
.depth {
  padding-left:40px;
  top:50px;
  display:block;
  color:black;
  font:bold 1.2em Arial, sans-serif;
  position:relative;
}
.depth:before {
  content:'\2190 Click Me';
  padding-left:40px;
  color:rgba(255, 255, 255, 0.1);
  position:absolute;
  top:1px;
  left:1px;
}
.depth:after {
  content:'\2190 Click Me';
  padding-left:40px;
  color:rgba(255, 255, 255, 0.1);
  position:absolute;
  top:2px;
  left:2px;
}
#center {
  float:none;
  margin:0 auto;
}
.navbar .navbar-inner {
  border:1px solid rgba(196, 189, 191, 0.31);
  border-radius:0;
  background:rgba(127, 128, 134, 0.6);
}
.navbar .brand {
  color:rgba(0, 204, 255, 0.96);
  text-shadow:0 1px 0 #000000;
  opacity:0.9;
  font-weight:bold;
  > a {
    color:#faebd7;
  }
  > a:hover {
    color:#ff0000;
    text-decoration:none;
  }
}
.navbar .brand:hover {
  color:rgba(0, 204, 255, 0.96);
}
.navbar .nav > li > a {
  padding:11px 8px 6px;
  color:#faebd7;
}
.navbar .nav > li > a:hover {
  padding:11px 8px 6px;
  color:rgba(0, 204, 255, 0.96);
}
.navbar .nav .active {
  > a, > a:hover {
    background:None;
    box-shadow:None;
    color:rgba(0, 204, 255, 0.96);
    font-weight:bold;
  }
}
#slideout {
  position:absolute;
  width:262px;
  height:100%;
  top:0;
  left:-222px;
}
#slideclick {
  position:relative;
  top:150px;
  float:right;
  height:40px;
  width:40px;
  background:#ee8d40;
  background-image:url("img/camera.png");
  background-repeat:no-repeat;
  background-position:2px 3px;
  border-top-right-radius:10px;
  border-bottom-right-radius:10px;
  box-shadow:0 0 3px rgba(85, 85, 85, 0.29), 0 2px 4px #666666, 0 12px 18px rgba(85, 85, 85, 0.29);
}
#slideout.popped > #slideclick {
  background:rgba(127, 128, 134, 0.6);
  background-image:url("img/arrow-close.png");
  background-repeat:no-repeat;
  background-position:4px 5px;
  opacity:0.7;
}
#slidecontent {
  border:1px solid rgba(196, 189, 191, 0.31);
  background:rgba(127, 128, 134, 0.6);
  width:220px;
  height:100%;
  overflow-y:auto;
  a {
    display:block;
    color:#faebd7;
    font-size:1.2em;
    font-weight:bold;
    text-decoration:none;
    border-bottom:1px solid rgba(41, 41, 41, 0.53);
    padding:10px;
  }
  a:hover {
    color:rgba(0, 204, 255, 0.96);
  }
  li.active > a {
    color:#ee8d40;
    display:block;
    font-size:1.3em;
    font-weight:bold;
    text-decoration:none;
  }
  h3 {
    color:rgba(0, 204, 255, 0.96);
    font-size:20px;
    padding-left:20px;
    margin:0;
    font-weight:bold;
    background:rgba(127, 128, 134, 0.6);
    text-shadow:0 1px 0 #000000;
    opacity:0.9;
  }
}
.icon-camera, .icon-folder-close, .icon-folder-open, .icon-home {
  opacity:0.60;
}
.sublist {
  list-style:none;
}

#quote {
  position:relative;
  top:150px;
  float:none;
  margin-left:auto;
  margin-right:auto;
  .well {
    border:1px solid rgba(196, 189, 191, 0.31);
    //border-radius:0;
    background:rgba(127, 128, 134, 0.6);
    color:#faebd7;
    font-family:"Josefin Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
  }
}